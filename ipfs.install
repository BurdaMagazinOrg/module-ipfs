<?php

/**
 * @file
 * Install IPFS Schema.
 */

/**
 * Implements hook_schema().
 *
 * Defines the database tables used by this module.
 *
 * @see hook_schema()
 */
function ipfs_schema() {
  $schema['ipfs_mapping'] = [
    'description' => 'Stores mapping of file id to IPFS hash.',
    'fields' => [
      'fid' => [
        'description' => 'File ID.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ],
      'hash' => [
        'type' => 'varchar',
        'length' => 46,
        'not null' => TRUE,
        'default' => '',
        'description' => 'IPFS hash.',
      ],
    ],
    'primary key' => ['fid'],
    'indexes' => ['hash' => ['hash']],
  ];

  return $schema;
}
